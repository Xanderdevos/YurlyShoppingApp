<?xml version="1.0" encoding="utf-8"?>
<!-- File voor de custom actionbar die boven elke view zichtbaar is-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#062966"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    >


    <!-- Menubutton aan de linkerkant van de actionbar.-->
    <ImageButton
        android:id="@+id/btn_menu"
        android:src="@drawable/menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#062966"
        android:layout_alignParentStart="true"
        />
    <!--Winkelmand aan de rechterkant van de actionbar -->
    <ImageButton
        android:id="@+id/btn_bag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="167dp"
        android:background="#062966"
        android:src="@drawable/shopping_bag" />

    <ImageButton
        android:id="@+id/btn_fav"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="80dp"
        android:background="#062966"
        android:src="@drawable/favorite" />

    <ImageButton
        android:id="@+id/btn_acc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:background="#062966"
        android:src="@drawable/my_account" />

    <ImageButton
        android:id="@+id/btn_search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="255dp"
        android:background="#062966"
        android:src="@drawable/search" />

</RelativeLayout>